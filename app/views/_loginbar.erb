<div id="login_bar">
  <h3>Sign-up</h3>
  <form action="/users" name="create_account" method="post">
    <input type="name" placeholder="name" name="user[name]">
    <input type="text" placeholder="email" name="user[email]">
    <input type="password" placeholder="password" name="password">
    <input type="submit" value="Sign-Up">
  </form>

  <h3>Log-in</h3>
  <form action="/sessions" name="login" method="post">
    <input type="text" placeholder="email" name="email">
    <input type="password" placeholder="password" name="password">
    <input type="submit" value="Sign-in">
  </form>

  <a href="#" id="logout"><h3>Logout</h3></a>
</div>